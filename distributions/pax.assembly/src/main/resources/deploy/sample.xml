<?xml version="1.0" encoding="UTF-8"?>
<setup  xmlns="http://net.mjahn.jenkins/schema/configruation/v1-0" 
		xmlns:xs="http://www.w3.org/2001/XMLSchema-instance" 
                xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                xsi:schemaLocation='http://net.mjahn.jenkins/schema/configruation/v1-0 ../../main/resources/configuration-1.0.xsd'>

    <name>test</name>
    <configuration alias="defaultConfig">
        <projects>
            <project>
                <name>cibuddy</name>
                <projectURL>http://localhost:8080/job/cibuddy%20masterbuild/</projectURL>
            </project>
        </projects>
        <trigger>
            <statusIndicator>
                <id>0</id>
            </statusIndicator>
            <action status="blue" condition="all">
                <indicate>success</indicate>
            </action>
            <action status="red" condition="1:*"><!-- at least one -->
                <indicate>failure</indicate>
            </action>
            <action status="yellow" condition="1:*"><!-- at least one -->
                <indicate>warning</indicate>
            </action>
            <action status="default"><!-- at least one -->
                <indicate>off</indicate>
            </action>
        </trigger>
    </configuration>
</setup>
