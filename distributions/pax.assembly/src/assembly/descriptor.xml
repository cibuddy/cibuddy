<?xml version="1.0"?>
<assembly xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
                      http://maven.apache.org/xsd/assembly-1.1.0-SNAPSHOT.xsd">
    <id>bin</id>
    <formats>
        <format>zip</format>
        <format>tar.gz</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <dependencySets>
        <dependencySet>
            <useTransitiveDependencies>true</useTransitiveDependencies>
            <outputFileNameMapping>${artifact.artifactId}.${artifact.extension}</outputFileNameMapping>
            <unpack>false</unpack>
            <includes>
                <include>org.ops4j.pax.runner:pax-runner*</include>
            </includes>
            <outputDirectory>./pax</outputDirectory>
        </dependencySet>
        
        <dependencySet>
            <useTransitiveDependencies>true</useTransitiveDependencies>
            <unpack>false</unpack>
            <includes>
                <!--include>org.apache.aries.blueprint:*</include>
                <include>org.apache.aries.proxy:*</include>
                <include>org.apache.aries.quiesce:*</include>
                <include>org.apache.aries:*</include>
                <include>org.apache.xbean:*</include>
                <include>asm:*</include-->
                <include>org.apache.log4j:*</include>
                <include>org.osgi:*</include>
                <include>org.slf4j:*</include>
                <include>org.apache.log4j:com.springsource.org.apache.log4j</include>
                <include>${application.domain}:log4j.config.fragment</include>
                <include>org.apache.httpcomponents:httpclient-osgi</include>
                <include>org.apache.httpcomponents:httpcore-osgi</include>
                <include>org.apache.felix:org.apache.felix.fileinstall</include>
            </includes>
            <outputDirectory>./core</outputDirectory>
        </dependencySet>
    
        <!-- ${application.name} -->
        <dependencySet>
            <useTransitiveDependencies>false</useTransitiveDependencies>
            <unpack>false</unpack>
            <includes>
                <include>${application.domain}:lights.status</include>
                <include>${application.domain}:core</include>
                <include>${application.domain}:ibuddy</include>
                <include>${application.domain}:delcom.lights</include>
                <include>${application.domain}:jenkins.status</include>
                <include>${application.domain}:project.configuration</include>
            </includes>
            <outputDirectory>./${application.name}</outputDirectory>
        </dependencySet>
        <!-- native drivers -->
        <dependencySet>
            <useTransitiveDependencies>false</useTransitiveDependencies>
            <unpack>false</unpack>
            <includes>
                <include>${application.domain}:hid</include>
            </includes>
            <outputDirectory>./${application.name}-driver</outputDirectory>
        </dependencySet>
        <!-- test dependencies -->
        <dependencySet>
            <useTransitiveDependencies>false</useTransitiveDependencies>
            <unpack>false</unpack>
            <includes>
                <include>${application.domain}:demo.light</include>
            </includes>
            <outputDirectory>./${application.name}-test</outputDirectory>
        </dependencySet>
        <dependencySet>
            <useTransitiveDependencies>true</useTransitiveDependencies>
            <unpack>false</unpack>
            <includes>
                <include>org.osgi:org.osgi.compendium</include>
                <!--
                <include>org.mortbay.jetty:jetty</include>
                <include>org.mortbay.jetty:jetty-util</include>
                <include>org.mortbay.jetty:jetty-sslengine</include>
                <include>org.mortbay.jetty:servlet-api-2.5</include>
                <include>org.apache.felix:org.apache.felix.http.jetty</include>
                -->
            </includes>
            <outputDirectory>./${application.name}-http</outputDirectory>
        </dependencySet>
    </dependencySets>
    <fileSets>
        <fileSet>
            <directory>src/main/resources</directory>
            <filtered>true</filtered>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>**</include>
            </includes>
        </fileSet>
    </fileSets>
</assembly>