            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>
                    <execution>
                        <id>copy</id>
                        <phase>generate-resources</phase>
                        <goals>
                            <goal>copy</goal>
                        </goals>
                        <configuration>
                            <artifactItems>
                                <!--artifactItem>
                                    <groupId>my.groupId</groupId>
                                    <artifactId>my.branding.id</artifactId>
                                    <version>1.0</version>
